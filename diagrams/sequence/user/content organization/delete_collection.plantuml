@startuml
!theme vibrant
title Delete Collection Sequence

actor User

box "Favi-BE Backend" #LightBlue
  participant "CollectionsController" as CollectionController
  participant "ICollectionService" as CollectionService
end box

User -> CollectionController: DELETE /api/collections/{id}
activate CollectionController

CollectionController -> CollectionService: DeleteAsync(id, userId)
activate CollectionService
CollectionService --> CollectionController: bool wasSuccessful
deactivate CollectionService

alt Delete successful
    CollectionController --> User: 204 No Content
else Forbidden
    CollectionController --> User: 403 Forbidden
end

deactivate CollectionController
@enduml
